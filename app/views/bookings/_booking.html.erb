<%= simple_form_for [@item, @booking] do |f| %>
  <%= f.input :start_date, as: :date, html5: true %>
  <%= f.input :end_date, as: :date, html5: true %>
  <%= f.input :notes %>
  <% if @item.user_id == current_user.id %>
  <%= link_to "My Bookings", booking_path(current_user.id), class: "btn btn-gradient btn-lg" %>
  <%else %>
  <%= f.button :submit, class: "btn btn-gradient btn-lg"%>
  <% end %>
<% end %>
