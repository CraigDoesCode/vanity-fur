<div class="card-category mb-5" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://media.istockphoto.com/photos/mixed-breed-puppy-half-pug-half-cavalier-king-charles-spaniel-picture-id1307607206?k=20&m=1307607206&s=612x612&w=0&h=kXYL0GHk4SRL7Kl4pJhyuCIuvSNvXyn3-zur2sAf4ew=)">
 <h2>Add New Item</h2>
</div>

<div class="form-container">
<div class="container m-5 p-5">
  <%= simple_form_for [@item] do |f| %>
    <%= f.input :price, as: :currency %>
    <%= f.input :name %>
    <%= f.input :size, collection: ["Small", "Medium", "Large"] %>
    <%= f.input :availability %> <%# need this to say when it is available dates? %>
    <%= f.input :description %>
    <%= f.input :rating %>
    <%= f.association :user %>
    <%= f.input :photos, as: :file, input_html: { multiple: true } %>


    <%= f.button :submit, class: "btn btn-gradient btn-lg"%>

  <% end %>
</div>
</div>
